.content{
    width: 100%;
    height: 700px;
    background-color: #f2f2f2;
}
.hr{
    padding-top:40px;
}
.item{
    margin: 0 auto;
    border: 1px solid #b1c02c;
    height: 40px;
    width: 90%;
    border-radius: 3px;
    background-color: #ec9d0bea;
    margin-bottom:15px;
    display: flex;
    flex-direction: row;
}
.item text{
    height: 40px;
    line-height: 40px;
    margin-left: 10px;
}

.item input{
    height: 40px;
    line-height: 40px;
    margin-left: 10px;
}

.section{
    margin: 0 auto;
    border: 1px solid #b1c02c;
    height: 40px;
    width: 90%;
    border-radius: 3px;
    background-color: #ec9d0bea;
    margin-bottom:15px;
}
.picker{
    height: 40px;
    line-height: 40px;
    margin-left: 10px;
}

.picker input{
    height: 40px;
    line-height: 40px;
    margin-left: 10px;
}

.holder{
    font-size: 14px;
    color: #833b73;
}
.flex{
    display: flex;
    flex-direction: row;
}

.btn{
    width: 66%;
    color: #999999;
    margin-top:40px; 
}