<view class="content">
  <view class="item">
     <text>旅行团：</text> 
     <text>{{name}}</text>
  </view>
  <view class="item">
     <text>联系人：</text> 
     <text>{{man}}</text>
  </view>
  <view class="item">
     <text>联系电话：</text> 
     <text>{{phone}}</text>
  </view>
  <view class="itemImage">
    <view class="pic">
       <image src="/images/welcome.jpg" style="width:100%;height:200px;"></image>
    </view>
    <view class="hr"></view>
  </view>
</view>


<view class="button">
    <button class="btn" type="primary" bindtap="call">联系团长</button>
</view>