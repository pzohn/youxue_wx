.content{
    width: 100%;
    height: 700px;
    background-color: #f2f2f2;
}
.hr{
    padding-top:40px;
}
.item{
    margin: 0 auto;
    border: 1px solid #e6b03d;
    height: 40px;
    width: 90%;
    border-radius: 3px;
    background-color: #d1c628d7;
    margin-bottom:15px;
}
.item text{
    height: 40px;
    line-height: 40px;
    margin-left: 10px;
}

.btn{
    width: 66%;
    color: #999999;
    margin-top:6px; 
}

.button{
  display: flex;
  flex-direction: row;
}
